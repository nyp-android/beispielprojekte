<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="@dimen/height_spinner_item_image"
	android:layout_width="fill_parent"
	android:orientation="horizontal"
	>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="horizontal"
		>

		<ImageView
			android:id="@+id/image_image_spinner_item_image"
			android:layout_height="@dimen/width_spinner_item_image_imageview"
			android:layout_width="@dimen/width_spinner_item_image_imageview"
			android:layout_marginBottom="@dimen/spacing_spinner_image_vertical"
			android:layout_marginTop="@dimen/spacing_spinner_image_vertical"
			android:layout_marginRight="@dimen/spacing_spinner_image_right"
			android:layout_marginLeft="@dimen/spacing_spinner_image_left"
			android:src="@drawable/ic_user"
			/>

		<TextView
			android:id="@+id/text_image_spinner_item_text"
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:gravity="center_vertical"
			/>

	</LinearLayout>


</RelativeLayout>