<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/loadApi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Api" tools:layout_editor_absoluteY="440dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/postReq"/>

    <Button
            android:id="@+id/postReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Request" tools:layout_editor_absoluteY="440dp"
            app:layout_constraintStart_toEndOf="@+id/loadApi"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>
